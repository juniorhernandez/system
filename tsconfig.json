{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "ES2020",               
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],        
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
